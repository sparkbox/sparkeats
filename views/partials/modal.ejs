<button class="btn--link"><%= buttonText %></button>
<div class="modal">
  <div class="modal__content">
    <span class="modal__close-button">&times;</span>
    <p>Are you sure that you want to delete this review?</p>
    <div class="modal__buttons">
      <button class="btn btn--primary">Cancel</button>
      <form method="POST" action="/places/<%= place.id %>/reviews/<%= review.reviewID %>">
        <%= review.reviewID %>
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn--secondary-full-width" value="Delete">
      </form>
    </div>
  </div>
</div>
